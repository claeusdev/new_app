= form_with(model: store, locale: true) do |f|
	= f.text_field :name, placeholder: 'Give your store a name'
	= f.text_area :about, placeholder: 'Say something small about your brand'

	= f.fields_for :user do |u|
		= u.text_field :first_name, placeholder: "First name"
		= u.text_field :last_name, placeholder: "Last Name"
		= u.text_field :country, placeholder: "Country"
		= u.email_field :email, placeholder: "Email"
		= u.password_field :password, placeholder: "Password"
		= u.password_field :password_confirmation, placeholder: "Confirm Password"

	= f.submit "Create your store"