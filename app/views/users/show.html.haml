.container
	.row
		.col-sm-8.offset-sm-2
			.dialog-box
				.user-header
					.user-header__picContainer
						- if current_user.avatar.blank?
							.pro__pic{ style: "background-image: url('#{gravatar_url(@user)}')"}
						- else
							.pro__pic{ style: "background-image: url('#{@user.avatar.url(:medium)}')"}

					.user-info
						.user-info__name= @user.first_name
						.user-info__username-container
							-# .user-info__following= @user.followed_stores.count
							-# .user-info__following 100 Followings
					- if @user.store.present?
						= button_to "Visit their store", store_path(@user.store), method: :get, class: "btn btn-danger btn-sm"

					- elsif current_user == @user 
						= button_to "Start Selling", new_store_path, method: :get, class: "btn btn-danger"

						
