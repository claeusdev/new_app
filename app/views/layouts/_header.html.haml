
.mainNav
  .mainNav-layout.container
    .mainNav-tabs
      = link_to "Claeus", root_path, class: 'mainNavTab', id: 'logo'
    .mobileSearchContainer
      = form_with( url: search_path, method: :get, local: true) do |f|
        = f.text_field :q, class: "mobileNavSearch", placeholder: "Search products and stores",  id: "desktopSearchInput"
    .navUserSection
      .mainNav-userSection
        -# - unless current_page?root_path
        .mainNav-desktopSearchContainer
          .mainNavSearch-container
            = form_with( url: search_path, method: :get, local: true) do |f|
              = f.text_field :q, class: "mainNavSearch js-globalSearchInput", placeholder: "Search products, stores, tags ...", id: "desktopSearchInput"
        
          .nav-action.show-search{style: "background-image: url(#{image_path "search.png"})"}
        - if user_signed_in?
          .js-userNav.userNav
            .nav-profile.nav-action.account-action{ style: "background-image:  url('#{ gravatar_url(current_user)}')"  }
            .menuNav
              .menuNav-arrow
              .menuNav-scrim
              
              .menuNav-list
                = link_to "Profile", user_path(current_user), class: "menuNav-item"
                - if current_user.store.present?

                  = link_to "View store", store_path(current_user.store), class: "menuNav-item"

                  = link_to "Admin Panel", store_dashboard_path(current_user.store), class: "menuNav-item"

                = link_to "Edit Profile", edit_user_registration_path(current_user), class: "menuNav-item"
                = link_to "Log Out", destroy_user_session_path, method: :delete, class: "menuNav-item"
            
